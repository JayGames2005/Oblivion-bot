                            <option value="">No Role</option>
                            <% roles.forEach(role => { %>
                                <% if (role.id !== guild.id) { %>
                                    <option value="<%= role.id %>" <%= achievementSettings && achievementSettings.msg_100_role === role.id ? 'selected' : '' %>>
                                        <%= role.name %>
                                    </option>
                                <% } %>
