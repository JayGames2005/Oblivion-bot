                <div class="form-group">
                    <label class="form-label">Message ID</label>
                    <input type="text" class="form-input" placeholder="Right-click message > Copy ID">
                </div>
                <div class="form-group">
                    <label class="form-label">Emoji</label>
                    <input type="text" class="form-input" placeholder="ðŸ˜€ or custom emoji">
